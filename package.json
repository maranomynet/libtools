{
  "name": "@maranomynet/libtools",
  "version": "0.1.4",
  "description": "Convention-based helper functions for people authoring npm packages.",
  "repository": "ssh://git@github.com:maranomynet/libtools.git",
  "contributors": [
    "Már Örlygsson <mar.nospam@anomy.net>"
  ],
  "license": "ISC",
  "dependencies": {
    "glob": "^10.3.10"
  },
  "devDependencies": {
    "@hugsmidjan/hxmstyle": "^8.4.0",
    "@types/bun": "^1.0.4",
    "eslint": "^8.56.0",
    "prettier": "^2.8.8",
    "typescript": "^5.3.3"
  },
  "private": true,
  "engines": {
    "bun": "^1.0.26",
    "node": "9999. Please use bun",
    "npm": "9999. Please use bun",
